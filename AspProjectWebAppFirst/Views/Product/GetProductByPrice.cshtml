@{
    List<Product>? allProducts = ViewData["productsByPrice"] as List<Product>;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>




<div class="container">
    <div style="display:grid; grid-template-columns: repeat(4,1fr); grid-gap: 20px">

        @foreach (Product item in allProducts)
        {


            <div class="card" style="width: 18rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                <img src="@item.ImgUrl" class="card-img-top" alt="...">
                <hr />
                <div class="card-body">
                    <h3 class="card-text" style="text-align:center; font-size:20px;">@item.Name</h3>
                    <h6 class="card-text" style="text-align:center;">@item.Description</h6>
                    <h6 class="card-text" style="text-align:center; color:darkred;">@item.Price</h6>
                    <div style="display: flex;">
                        <form asp-action="Delete" asp-controller="Product" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="submit" value="Delete" />
                        </form>

                    </div>
                </div>
            </div>

        }
    </div>


</div>